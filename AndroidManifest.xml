<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.todo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.todo.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.todo.CadastroLoginActivity"
            android:label="@string/title_activity_cadastro_login" >
        </activity>
        <activity
            android:name="com.example.todo.CadastroTarefaActivity"
            android:label="@string/title_activity_cadastro_tarefa" >
        </activity>
        <activity
            android:name="com.example.todo.ListTarefaActivity"
            android:label="@string/title_activity_list_tarefa" >
        </activity>
        <activity
            android:name="com.example.todo.ActivityTarefa"
            android:label="@string/title_activity_tarefa" >
        </activity>
    </application>

</manifest>

