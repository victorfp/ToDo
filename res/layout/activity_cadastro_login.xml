<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CadastroLoginActivity" >

    <TextView
        android:id="@+id/txtEmailCad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="90dp"
        android:text="Email:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/edEmailCad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtEmailCad"
        android:layout_below="@+id/txtEmailCad"
        android:inputType="textEmailAddress" 
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/txtTelefoneCad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edEmailCad"
        android:layout_below="@+id/edEmailCad"
        android:layout_marginTop="16dp"
        android:text="Telefone:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/edTelefoneCad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtTelefoneCad"
        android:layout_below="@+id/txtTelefoneCad"
        android:ems="10" />

    <TextView
        android:id="@+id/txtSenhaCad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edTelefoneCad"
        android:layout_below="@+id/edTelefoneCad"
        android:layout_marginTop="16dp"
        android:text="Senha:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/edSenhaCad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtSenhaCad"
        android:layout_below="@+id/txtSenhaCad"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btOkCad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edSenhaCad"
        android:layout_below="@+id/edSenhaCad"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="20dp"
        android:text="OK" />

    <Button
        android:id="@+id/btCancelarCad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btOkCad"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@+id/btOkCad"
        android:text="Cancelar" />

</RelativeLayout>
